// JavaScript

/* T A S K
 * An isogram is a word that has no repeating letters, consecutive or non-consecutive. 
 * Implement a function that determines whether a string that contains only letters is an isogram. 
 * Assume the empty string is an isogram. Ignore letter case.
 */


function isIsogram(input){

  let boolVar = true;

  if (input === undefined ) // assuming empty strings are isograms
  { 
     return boolVar = true;
  }
  else 
  {
    var input = input.toLowerCase(); //ignoring letter case
    var word = input.split("");      //turning the string 'input' into an array 'word'
  
    for (var i = 0; i < word.length; i++) 
    {
       for (var j = i + 1; j < word.length; j++)
       {
          if (word[i] === word[j]) 
          {
             return boolVar = false; 
          }
       }
     }
   } 
  return boolVar;
}

//console.log(isIsogram("isogram"));
//console.log(isIsogram("aba"));
//console.log(isIsogram(""));
